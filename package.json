{
  "name": "farm",
  "private": true,
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "npm run dev --workspace web",
    "build": "npm run build --workspace web && if [ -d apps/web/.next ]; then rm -rf .next && cp -a apps/web/.next .; fi",
    "start": "npm run start --workspace web",
    "lint": "npm run lint --workspace web",
    "test": "npm run test --workspace web",
    "test:api": "npm run test:api --workspace web",
    "test:e2e": "npm run test:e2e --workspace web"
  }
}
